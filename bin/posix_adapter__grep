        "$posix_adapter__value__pattern" \
        "$posix_adapter__value__path" \

      ;;
  # ,------- extended
  # |,------ silent
  # ||,----- invert_match
  # |||,---- count
  # ||||,--- match_only
  # |||||,-- path
    110110)
      grep \
        -E \
        --silent \
        \
        --count \
        --only-matching \
        "$posix_adapter__value__pattern" \
        \

      ;;
  # ,------- extended
