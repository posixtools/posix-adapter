        "$posix_adapter__value__path" \

      ;;
  # ,------- extended
  # |,------ silent
  # ||,----- invert_match
  # |||,---- count
  # ||||,--- match_only
  # |||||,-- path
    110100)
      grep \
        -E \
        --silent \
        \
        --count \
        \
        "$posix_adapter__value__pattern" \
        \

      ;;
  # ,------- extended
  # |,------ silent
  # ||,----- invert_match
  # |||,---- count
  # ||||,--- match_only
  # |||||,-- path
    110101)
      grep \
        -E \
        --silent \
        \
        --count \
