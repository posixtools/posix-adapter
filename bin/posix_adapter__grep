        \
        "$posix_adapter__value__pattern" \
        \

      ;;
  # ,------- extended
  # |,------ silent
  # ||,----- invert_match
  # |||,---- count
  # ||||,--- match_only
  # |||||,-- path
    000101)
      grep \
        \
        \
        \
        --count \
        \
        "$posix_adapter__value__pattern" \
        "$posix_adapter__value__path" \

      ;;
  # ,------- extended
  # |,------ silent
  # ||,----- invert_match
  # |||,---- count
  # ||||,--- match_only
  # |||||,-- path
    000110)
      grep \
        \
        \
        \
        --count \
        --only-matching \
        "$posix_adapter__value__pattern" \
        \

      ;;
  # ,------- extended
