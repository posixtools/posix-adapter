        \
        --count \
        --only-matching \
        "$posix_adapter__value__pattern" \
        "$posix_adapter__value__path" \

      ;;
  # ,------- extended
  # |,------ silent
  # ||,----- invert_match
  # |||,---- count
  # ||||,--- match_only
  # |||||,-- path
    001000)
      grep \
        \
        \
        --invert-match \
        \
        \
        "$posix_adapter__value__pattern" \
        \

      ;;
  # ,------- extended
  # |,------ silent
  # ||,----- invert_match
  # |||,---- count
  # ||||,--- match_only
  # |||||,-- path
    001001)
      grep \
        \
        \
        --invert-match \
        \
        \
        "$posix_adapter__value__pattern" \
        "$posix_adapter__value__path" \

      ;;
  # ,------- extended
  # |,------ silent
  # ||,----- invert_match
  # |||,---- count
  # ||||,--- match_only
  # |||||,-- path
    001010)
      grep \
        \
        \
        --invert-match \
        \
        --only-matching \
        "$posix_adapter__value__pattern" \
        \

      ;;
  # ,------- extended
  # |,------ silent
  # ||,----- invert_match
  # |||,---- count
  # ||||,--- match_only
  # |||||,-- path
    001011)
